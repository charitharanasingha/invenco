{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "types": ["node", "reflect-metadata", "jest"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["**/*.tsx", "**/*.ts"]
}
